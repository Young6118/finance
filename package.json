{
  "name": "@sentiment-analysis/root",
  "version": "1.0.0",
  "description": "基于市场情绪分析的智能投资决策辅助工具 - Monorepo Root",
  "private": true,
  "packageManager": "pnpm@9.12.1",
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r --parallel dev",
    "start": "pnpm --filter @sentiment-analysis/backend start",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "clean": "pnpm -r clean",
    "type-check": "pnpm -r type-check",
    "backend:dev": "pnpm --filter @sentiment-analysis/backend dev",
    "frontend:dev": "pnpm --filter @sentiment-analysis/frontend dev",
    "backend:build": "pnpm --filter @sentiment-analysis/backend build",
    "frontend:build": "pnpm --filter @sentiment-analysis/frontend build"
  },
  "keywords": [
    "trading",
    "sentiment-analysis",
    "stock-market",
    "investment",
    "quantitative-analysis",
    "fintech",
    "nestjs",
    "vue3",
    "typescript",
    "monorepo"
  ],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/sentiment-analysis-trading-system.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/sentiment-analysis-trading-system/issues"
  },
  "homepage": "https://github.com/yourusername/sentiment-analysis-trading-system#readme",
  "devDependencies": {
    "@types/node": "^22.8.0",
    "@typescript-eslint/eslint-plugin": "^8.13.0",
    "@typescript-eslint/parser": "^8.13.0",
    "eslint": "^9.15.0",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=9.0.0"
  },
  "pnpm": {
    "overrides": {
      "@types/node": "^22.8.0"
    }
  }
}